{
    <div class="table-responsive">
        <h4>Variety Order Details</h4>
        <table class="table">
            <tr>
                <th>
                    Variety
                </th>
                <th>
                    Quantity
                </th>
                <th />
            </tr>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Variety.FullDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteVarietyOrder", new { id = item.OrderDetailId }) | @Html.ActionLink("Edit", "EditVarietyOrder", new { id = item.OrderDetailId })
