@model YHRSys.Models.ActivityAssignment

@{
    ViewBag.Title = "Delete Assignee";
}

<h2>Delete Assignee</h2>

<h3>Are you sure you want to delete this assignee?</h3>
<div>
    <h4>Activity Assignee</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.activityId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.activity.activityDefinition.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.userId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AssigneeFullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.todo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.todo)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("activityId", Model.activityId)
        <div class="form-actions no-color">
            <input type="submit" value="Delete Assignee" class="btn btn-default" /> |
            @Html.ActionLink("Back to Details", "Details", new { id = Model.activityId })
        </div>
    }
</div>