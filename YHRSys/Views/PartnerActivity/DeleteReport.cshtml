@model YHRSys.Models.PartnerReporting

@{
    ViewBag.Title = "Delete Report";
}

<h2>Delete Report</h2>

<h3>Are you sure you want to delete this partner activity report?</h3>
<div>
    <h4>@ViewBag.ActivityTitle</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.varietyQty)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.varietyQty)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.reagentQty)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.reagentQty)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.reportDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.reportDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.comment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.comment)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("activityId", Model.activityId)
        <div class="form-actions no-color">
            <input type="submit" value="Delete report" class="btn btn-default" /> |
            @Html.ActionLink("Back to Details", "Details", new { id = Model.activityId })
        </div>
    }
</div>