@model YHRSys.Models.InternalReagentUsage

@{
    ViewBag.Title = "Edit Internal Reagent Usage";
}

<h2>Edit Internal Reagent Usage</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Internal Reagent Usage</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.usageId)
        @Html.HiddenFor(model => model.reagentId)
        @Html.HiddenFor(model => model.Timestamp)

        <div class="form-group">
            @Html.LabelFor(model => model.reagentId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.reagent.name)
                @Html.ValidationMessageFor(model => model.reagentId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.quantity, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.quantity, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.quantity)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dispatchDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.dispatchDate, new { @class = "form-control datecontrol" })
                @Html.ValidationMessageFor(model => model.dispatchDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.userId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("userId", String.Empty)
                @Html.ValidationMessageFor(model => model.userId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.receivedBy, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.receivedBy, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.receivedBy)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.note, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.note, new { rows = 2, columns = 40, @class = "form-control" })
                @Html.ValidationMessageFor(model => model.note)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
