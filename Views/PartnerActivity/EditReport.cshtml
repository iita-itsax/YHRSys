@model YHRSys.Models.PartnerReporting

@{
    ViewBag.Title = "Edit Partner Activitiy Report";
}

<h2>@ViewBag.ActivityTitle</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.reportId)
        @Html.HiddenFor(model => model.activityId)
        @Html.HiddenFor(model => model.Timestamp)
        
        <div class="form-group">
            @Html.LabelFor(model => model.reagentQty, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.reagentQty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.reagentQty)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.spQty, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.spQty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.spQty)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tcpQty, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.tcpQty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tcpQty)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tpQty, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.tpQty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tpQty)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.bioRPQty, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.bioRPQty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.bioRPQty)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.reportDate, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.reportDate, "{0:dd/MM/yyyy}", new { @class = "form-control datecontrol" })
                @Html.ValidationMessageFor(model => model.reportDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.comment, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.comment, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.comment)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Details", "Details", new { id = Model.activityId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


