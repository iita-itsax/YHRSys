@model YHRSys.Models.OrderDetail

@{
    ViewBag.Title = "Edit Variety Order";
}

<h2>Edit Variety Order</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.OrderDetailId)
        @Html.HiddenFor(model => model.OrderId)

        <div class="form-group">
            @Html.LabelFor(model => model.VarietyId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("VarietyId", null, String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VarietyId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Quantity)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Details", "Details", new { id = Model.OrderId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


