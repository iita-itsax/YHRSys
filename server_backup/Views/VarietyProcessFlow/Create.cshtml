@model YHRSys.Models.VarietyProcessFlow

@{
    ViewBag.Title = "Create Variety Process Flow";
}

<h2>Create Variety Process Flow</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Variety Process Flow</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.varietyId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("varietyId", String.Empty)
                @Html.ValidationMessageFor(model => model.varietyId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.form, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("form")
                @Html.ValidationMessageFor(model => model.form)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.processDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.processDate, new { @class = "form-control datecontrol" })
                @Html.ValidationMessageFor(model => model.processDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.userId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("userId", String.Empty)
                @Html.ValidationMessageFor(model => model.userId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.rank, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("rank")
                @Html.ValidationMessageFor(model => model.rank)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.description, new { rows = 2, columns = 40, @class = "form-control" })
                @Html.ValidationMessageFor(model => model.description)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
